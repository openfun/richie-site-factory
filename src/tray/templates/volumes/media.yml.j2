apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: funmooc-pvc-media
  namespace: "{{ project_name }}"
  labels:
    app: richie
    version: "{{ funmooc_image_tag }}"
    deployment_stamp: "{{ deployment_stamp }}"
spec:
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: {{ funmooc_media_volume_size }}
