upstream funmooc-backend {
  server funmooc-app-{{ deployment_stamp }}:{{ funmooc_django_port }} fail_timeout=0;
}

server {
  listen {{ funmooc_nginx_port }};
  server_name localhost;

  {% if activate_http_basic_auth -%}
  auth_basic "{{ http_basic_auth_message }}";
  auth_basic_user_file {{ http_basic_auth_user_file }};
  {% endif %}

  client_max_body_size 100M;

  rewrite ^(.*)/favicon.ico$ /static/images/favicon.ico last;

  # Disables server version feedback on pages and in headers
  server_tokens off;

  location @proxy_to_funmooc_app {
    proxy_set_header Host $http_host;

    proxy_redirect off;
    proxy_pass http://funmooc-backend;
  }

  location / {
    try_files $uri @proxy_to_funmooc_app;
  }

  location ~ ^/media/(?P<file>.*) {
    root /data/media/funmooc;
    try_files /$file =404;
  }

  location ~ ^/static/(?P<file>.*) {
    root /data/static/funmooc;
    try_files /$file =404;
  }
}
